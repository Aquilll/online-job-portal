<div class="row">
<h1>Companies (<%= link_to "Add a company", new_company_path %> )</h1>
<table>
  <thead>
    <th>Name</th>
    <th>Type</th>
    <th>Action</th>
  </thead>
  <tbody style="border:1px solid black">
  <% @companies.each_with_index do |company, index| %>
    <tr>
      <td style="border:1px dotted black;padding: 10px;margin: 5px">
        <a type="button" data-toggle="modal" data-target="#jobs-<%=index%>">
          <%= "#{company.name}"%>
        </a>
      </td>
      <td style="border:1px dotted black;padding: 10px;margin: 5px"><%= "#{company.company_type}"%></td>
      <td style="border:1px dotted black;padding: 10px;margin: 5px"><%= link_to "Add a job", new_job_path %></td>
    </tr>

<!-- Modal -->
<div class="modal fade" id="jobs-<%=index%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Jobs in <%= company.name%> (<%= company.jobs.count%>)</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% unless company.jobs.present? %>
          No Jobs yet
        <% else %>
          <ul>
          <% company.jobs.each_with_index do |job, index|%>
            <li> <%= job.title%> </li>
          <% end %>
          </ul>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

  <%end%>
  </tbody>
  <p><%= paginate @companies %></p>
</table>
</div>
